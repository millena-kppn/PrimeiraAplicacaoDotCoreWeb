@{
	ViewData["Title"] = "Cadastro de Usuario";
}
@using (Html.BeginForm("PersistirUsuario", "Usuario", FormMethod.Post))
{
	<div>
		<input name="nome" class="form-control" type="text" placeholder="Nome">
	</div>
	<div>
		<input name="sobrenome" class="form-control" type="text" placeholder="Sobrenome">
	</div>
	<div>
		<input name="email" class="form-control" type="text" placeholder="E-mail">
	</div>
	<div>
		<button class="btn btn-primary" type="submit">Salvar</button>
	</div>
}